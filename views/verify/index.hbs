<!-- CORRESPONDS TO THE PAGE FOR TRULIO VERIFICATION -->
<div class="base">
  <div>
    <div class="jumbotron dashboard">
      <h1 class="display-4">Verify</h1>
      <p class="lead"> Please fill in as much information below as possible so we can verify your identity. This is made
                       possible thanks to Trulioo's API.</p>
      <p class="lead">
      </p>
    </div>
  </div>
</div>

<div align="center">
  <form action="/verify/index" method="post">
    <fieldset>
    <div class="form-group formsize">
      <label for="fname">First Name</label>
      <input type="text" class = "form-control" id="fname" name="FirstGivenName" placeholder="">
    </div>
    <div class="form-group formsize">
      <label for="mname">Middle Name</label>
      <input type="text" class = "form-control" id="mname" name="MiddleName" placeholder="">
    </div>
    <div class="form-group formsize">
      <label for="lname">Last Name</label>
      <input type="text" class = "form-control" id="lname" name="FirstSurName" placeholder="">
    </div>
    <div>
      <div class="form-group formsize">
        <label for="month">Month of Birth</label>
        <select class="form-control" id="month" name="MonthOfBirth">
          <option>1</option>
          <option>2</option>
          <option>3</option>
          <option>4</option>
          <option>5</option>
          <option>6</option>
          <option>7</option>
          <option>8</option>
          <option>9</option>
          <option>10</option>
          <option>11</option>
          <option>12</option>
        </select>
      </div>
      <div class="form-group formsize">
        <label for="date">Date of Birth</label>
        <select class="form-control" id="date" name="DayOfBirth">
          <option>1</option>
          <option>2</option>
          <option>3</option>
          <option>4</option>
          <option>5</option>
          <option>6</option>
          <option>7</option>
          <option>8</option>
          <option>9</option>
          <option>10</option>
          <option>11</option>
          <option>12</option>
          <option>13</option>
          <option>14</option>
          <option>15</option>
          <option>16</option>
          <option>17</option>
          <option>18</option>
          <option>19</option>
          <option>20</option>
          <option>21</option>
          <option>22</option>
          <option>23</option>
          <option>24</option>
          <option>25</option>
          <option>26</option>
          <option>27</option>
          <option>28</option>
          <option>29</option>
          <option>30</option>
          <option>31</option>
        </select>
      </div>
      <div class="form-group formsize">
        <label for="year">Year of Birth</label>
        <input type="number" class = "form-control" id="year" name="YearOfBirth" placeholder="">
      </div>
    </div>
    <div class="form-group formsize">
      <label for="phone">Phone</label>
      <input type="number" class = "form-control" id="phone" name="Telephone" placeholder="">
    </div>
    <div>
      <input type="checkbox" id="consent" required>
      <label for="consent">By clicking this box, the user agrees to our <a href="#">Terms and Conditions</a>.</label>

    </div>
    <div>
      <button type="submit">Verify</button>
    </div>
    <p></p>
  </fieldset>
  </form>
</div>
